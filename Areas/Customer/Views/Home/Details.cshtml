<div class="card mb-3 my-5" style="max-width: 1080px;">
    <div class="row g-0">
            <div class="col-md-4">
            <img src="~/Images/movies/@Model.ImgUrl" class="img-fluid rounded-start " alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text"><strong> Discription :</strong>This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div>
                        <p class="card-text"><strong> Price :</strong> @Model.Price</p>
                        <p class="card-text"><strong> Category :</strong> @Model.Category.Name</p>
                        <p class="card-text"><strong> Cinema :</strong> @Model.Cinema.Name</p>
                        <p class="card-text"><strong> Start Date :</strong> @Model.StartDate</p>
                        <p class="card-text"><strong> End Date :</strong> @Model.EndDate</p>
                        <p class="card-text"><strong> Status :</strong> @Model.MovieStatus</p>
                        <p class="card-text"><strong> Casts :</strong> </p>
                    @if (ViewBag.ActorMovies != null)
                    {
                        @foreach (var actorMovie in ViewBag.ActorMovies)
                        {
                                <a href="/Customer/Home/ActorDetails?actorId=@actorMovie.Actor.Id"><img src="~/Images/cast/@actorMovie.Actor.ProfilePicture" alt="Alternate Text" /></a> 
                        }
                    }
                    else
                    {
                        <p class="card-text"><strong>Actors:</strong> No actors available.</p>
                    }
                       
                    <!-- Trailer Section -->
                    <div class="my-3">
                        <p class="card-text"><strong>Trailer:</strong></p>
                        @if (!string.IsNullOrEmpty(Model.TrailerUrl))
                        {
                            <video width="600" height="300" controls>
                                <source src="@Model.TrailerUrl" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        }
                        else
                        {
                            <p class="text-muted">No trailer available.</p>
                        }
                    </div>
                        <div>
                        <button class="btn btn-danger">Book Ticket</button>
                        </div>
                    </div>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <div>
                    </div>
                </div>
            </div>
    </div>
</div>