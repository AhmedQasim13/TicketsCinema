<div class="card mb-3 my-5" style="max-width: 1080px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/Images/cast/@Model.ProfilePicture" class="img-fluid rounded w-100" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                <p class="card-text"><strong> Bio :</strong> @Model.Bio</p>
                <div>
                    <p class="card-text"><strong> News :</strong> @Model.News</p>
                    <p class="card-text"><strong> Links :</strong>  </p>
                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
</div>